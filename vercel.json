{
  "version": 2,
  "builds": [
    {
      "src": "app.py", // Your Streamlit app file
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb", // Adjust if your app is large
        "runtime": "python3.9" // Or your desired Python version
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py" // Route all requests to your Streamlit app
    }
  ]
}
